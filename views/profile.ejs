</head>
<body class="hive">


<div class="container">

  <div class="page-header text-center">
      <h1>Hive Fan Page</h1>

      <nav>

        <a href="/profile" class="btn btn-default btn-sm">Home</a>
        <a href="/favorites" class="btn btn-default btn-sm">Favorites</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>

      </nav>

  </div>



    <div id="hive"class="row">

        <!-- LOCAL INFORMATION -->
