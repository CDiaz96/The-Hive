  <div class="col-sm-6">
    <h3 class="old">Messages</h3>

     <ul class="messages">
      <% for(var i=0;i <messages.length; i++) {%>

        <li class="message">
          <span><%= messages[i].name %></span>

          <span><%= messages[i].msg %></span>

          <p><%= messages[i].topic %></p>

          <span><%= messages[i].heart %></span>

         <img id="img" class="imgUp" src=<%= "" + messages[i].src %> >

          <span><i class="fa fa-heart" aria-hidden="true"></i></span>

          <span><i class="fa fa-meh-o" aria-hidden="true"></i></span>

          <span><i class="fa fa-fire" aria-hidden="true"></i></span>

          <span><i class="fa fa-trash" aria-hidden="true"></i></span>

          <span><button class="save" type="button" name="button"> Save</button></span>

      <% if( messages[i].reaction === 'fire'){ %>

        <img class="reaction" src="img/fire.gif" alt="">

        <% } else if( messages[i].reaction === 'blah'){ %>

        <img class="reaction" src="img/blah.gif" alt="">
      <% } %>
     </li>
    <% } %>
  </ul>

    <h2 class="new">New Message</h2>
        <% if (user.local.email) { %>

     <form class="hold" action="/messages" method="POST">

        <input class="email" type="text" value="<%= user.local.email %>" name="name" placeholder="name">

        <input type="text" placeholder="title" name="msg">

        <input  type="text" name="src" value="">

        <textarea id="message" cols="30" rows="5" type="text" placeholder="message" name="topic"></textarea>

        <button class="submit" type="submit">Submit</button>

      </form>
  </div>
  <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
